{% extends "layout.njk" %}

{% block content %}
<body>
    <header>
            <div class="container header">
            <h1>
                {{title}}
            </h1>

            <a href="/artists" class="btn btn-rounded">Return</a>

        </div>
        </header>
</body>
<main class="wrapper">
    <div class="container">
        <p>{{error}}</p>
        
        <form action="/artists/{{ artist.id }}/edit" method="post">
            <label for="name">Enter artist name</label>
            <input type="text" id="name" name="name" value="{{ artist.name }}" required>
            <input type="submit"  value="Edit artist">
        </form>
    </div>
   
    </main>

{% endblock %}      