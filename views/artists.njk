{% extends "layout.njk" %}

{% block content %}
<main class="wrapper">
    <h1>
        {{title}}
    </h1>
    <p><a href="/artists/new">Create new artist</a></p>
    <ul class="artists-list">

        {% for artist in artists %}
        <li>
            <a href="/artists/{{artist.id}}">{{artist.name}}</a>
            <a href="/artists/{{artist.id}}/delete">Delete</a>
        </li>
        {% endfor %}
    </ul>
    </main>

{% endblock %}      